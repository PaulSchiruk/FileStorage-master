@model MvcApp.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
@section Body{
    <div class="container">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <fieldset>
                <legend>Register your account</legend>

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })

                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>

                <div class="alert-danger">
                    @Html.ValidationSummary(true)
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <input type="submit" value="Register" class="btn btn-default btn-lg" />
                    </div>
                </div>
            </fieldset>
        }
    </div>
}
