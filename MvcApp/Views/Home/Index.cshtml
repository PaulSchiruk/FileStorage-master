@section Body{
    <div id="page">
        <div id="body" class="home">
            <div class="header">
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("UserFiles","Drive")"><h1 class="pull-left">File storage</h1></a>
